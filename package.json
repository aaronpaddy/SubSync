{
  "name": "subtrackr",
  "version": "1.0.0",
  "description": "SubTrackr â€“ Subscription & Bill Tracker - A comprehensive web application to help users manage and track all their subscriptions and recurring bills in one place.",
  "main": "index.js",
  "scripts": {
    "setup": "./setup.sh",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "start:backend": "cd backend && npm start",
    "dev:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "start": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "clean:install": "npm run clean && npm run install:all",
    "extension:dev": "cd chrome-extension && node build.js dev",
    "extension:prod": "cd chrome-extension && node build.js prod",
    "extension:build": "cd chrome-extension && node build.js build",
    "extension:validate": "cd chrome-extension && node build.js validate"
  },
  "keywords": [
    "subscription",
    "tracker",
    "bills",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "typescript",
    "material-ui"
  ],
  "author": "SubTrackr Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/subtrackr.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/subtrackr/issues"
  },
  "homepage": "https://github.com/yourusername/subtrackr#readme"
} 